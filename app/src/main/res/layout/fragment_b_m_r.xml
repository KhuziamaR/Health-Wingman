<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="What is BMR?"
        android:textSize="40dp" />


    <TextView
        android:layout_width="367dp"
        android:layout_height="164dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Basal metabolic rate is the number of calories your body needs to accomplish its most basic (basal) life-sustaining functions."
        android:textSize="20dp" />

    <Button
        android:id="@+id/bmrNavButton"
        android:layout_width="194dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="bmrActivity"
        android:text="BMR Calculator" />


</LinearLayout>