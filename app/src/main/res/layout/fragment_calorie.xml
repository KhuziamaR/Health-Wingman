<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="Estimated Calorie Goal"
        android:textSize="40dp" />


    <TextView
        android:layout_width="367dp"
        android:layout_height="164dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Everyone has different caloric needs. Find out your estimated calorie goal to reach you goal in a safe and efficent way!"
        android:textSize="20dp" />

    <Button
        android:id="@+id/calorieNavButton"
        android:layout_width="194dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="calorieActivity"
        android:text="Daily Calorie Estimate Calculator" />


</LinearLayout>